<h2>Add Enrollments</h2>

<form action="enrollments/add" method="POST" class="form-horizontal" >
      
  <div class="form-group ">
    <label class="control-label col-xs-2">Course :</label>
    <div class="col-xs-10">  
          <select name="ComputerLanguage_Id">
            {{#each enrollments}}
                <option value = "{{Id}}">{{ComputerLanguage_name}}</option>
            {{/each}}
        </select>
    </div>
  </div>

   <div class= "form-group">
     <label class="control-label col-xs-2">Schools :</label>
     <div class="col-xs-10">  
        <select name="School_Id">
          {{#each Schools}}
            <option value = "{{Id}}">{{School_name}}<option>
          {{/each}}
          </select>
    </div>
  </div>

  <div class="form-group form-group-sm">
    <label for="Amount" class="control-label col-xs-2">Numbers :</label>  
     <div class="col-xs-3">
      <input type="number" name="Numbers" value="{{Numbers}}"class="form-control" placeholder="Please Enter  Amount" required>
    </div>
  </div>


  <div class="form-group form-group-sm">
    <label for="number" class="control-label col-xs-2">Enrollment Price :</label>
    <div class="col-xs-3">  
          <input type="number" step="any" name="enrollment_price" value="{{enrollment_price}}" class="form-control" placeholder="Please Enter Price" required>
    </div>
  </div>

  <div class="form-group form-group-sm">
    <label for="date" class="control-label col-xs-2">Enrollment date :</label>
      <div class="col-xs-3">  
            <input type="date" class="form-control" name="enrollment_date" placeholder="yyyy-mm-dd" required/>
      </div>
    
    </div> 
  <input type="submit" class="btn btn-success" id="enter" onclick="myFunction()">  

</form>

<h2>Enrollments</h2>
<table class = "table" id = "Enrollment ">
  <tr>
     
     <th>ComputerLanguage Name</th>
     <th>School Name</th>
     <th>Enrollment Price</th>
     <th>Number of Student Enrolled</th>
     <th>Enrollment Date<th>
</tr>
{{#enrollments}}
  <tr>

  <th>{{ComputerLanguage_name}}</th>
  <th>{{School_name}}</th>
  <th>{{enrollment_price}}</th>
  <th>{{Numbers}}</th>
  <th>{{enrollment_date}}</th>

  <td> <a href="/enrollments/edit/{{Id}}" class ="btn btn-success"><span class="glyphicon glyphicon-edit"></span> Edit</a></td>
 <td><a href="/enrollments/delete/{{Id}}" class="btn btn-danger">
    <span class="glyphicon glyphicon-remove"></span> Delete 
    </a></td>

 </tr> 
{{/enrollments}}

{{#no_enrollments}}
  <p>No enrollments available yet. Add some above.</p>
{{/no_enrollments}}

</table>





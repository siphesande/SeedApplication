<h1>EDIT Enrollments</h1>
{{#data}}
<form action="/enrollments/update/{{Id}}" method = "POST" class="form-horizontal">


	<div class="form-group form-group-sm">
		<label for="number" class="control-label col-xs-3">Numbers:</label>	 
		 <div class="col-xs-3">
			<input type="number" name="Numbers"  value ="{{Numbers}}"class="form-control"
			placeholder="Please Enter  Number" required/>
		</div>
	</div>


	<div class="form-group form-group-sm">
		<label for="number" class="control-label col-xs-2">Enrollment Price:</label>
		<div class="col-xs-3">	 
	     			<input type="number"  name="enrollment_price" value ="{{enrollment_price}}" class="form-control"/>
	       </div>

	 </div>
	<div class="form-group form-group-sm">
		<label for="date" class="control-label col-xs-2">Date:</label>
			<div class="col-xs-3">	 
     				<input type="date"  name="enrollment_date" value = "{{enrollment_date}}" class="form-control"/>
		
		</div> 
	</div> 

{{/data}}
<div class="form-group">
		<label class="control-label col-xs-2">Schools</label>
		<div class="col-xs-10">
     			<select name="School_Id">
    				{{#school}}
  					
      					
  					<option value = "{{Id}}" >{{School_name}}</option>
                        {{/school}}             
  			</select>
		</div>
	</div>

	<div class="form-group">
		<label class="control-label col-xs-2">ComputerLanguages</label>
		<div class="col-xs-10">


     			<select name="ComputerLanguage_Id">
    				{{# ComputerLanguages}}
                    <option value = "{{Id}}" >{{ComputerLanguage_name}}</option>
  				    {{/ComputerLanguages}}
			
  			</select>
		</div>
	</div>
	 <input type="submit" class="btn btn-success" id="enter" onclick="myFunction()">
</form>
<div class ="well">
  <a href="/enrollments" class ="btn btn-primary"><span class="glyphicon glyphicon-home"></span> Back to Enrollments</a></div>	
</div>
      <script>
      function myFunction() {
          alert("New Enrollment has been edited");
        }
      </script>
</div>

<form action="computerLanguages/add" method="POST" class="form-inline" >
  <div class="form-group form-group-sm">

    <label for="text" class="control-label col-xs-3">Computer Languages:</label>   
     <div class="col-xs-3">
      <input type="text" name="ComputerLanguage_name" value="{{ComputerLanguage_name}}" class="form-control" placeholder="Please Enter Coputer Laguage name" required>
    </div>
  </div>

<div class="form-group">
    <label class="control-label col-xs-3">Category:</label>
    <div class="col-xs-3">   
          <select name="Category_Id">
           {{#categories}}
                <option value = "{{Id}}">{{Category_name}}</option>
            {{/categories}}
        </select>
    </div>

  </div>

<input type ="submit" class="btn btn-success" id="enter" onclick="myFunction()">  

</form>


